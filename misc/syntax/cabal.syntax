#   links
    keyword http://+ brightblack
    keyword https://+ brightblack
    keyword ftp://+ brightblack
    keyword git://+ brightblack
    keyword cvs://+ brightblack
    keyword svn://+ brightblack
    keyword darcs://+ brightblack
#   special text inside of <>, i.e. emails
    keyword \<+\> red

#   build types with '\s & \n' hack to remove too stupid highlighting
