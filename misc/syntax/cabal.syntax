    keyword whole impl brightwhite
    keyword whole arch brightwhite

    keyword whole linestart \[\s\]executable brightyellow
    keyword whole linestart \[\s\]library brightyellow
    keyword whole linestart \[\s\]test-suite brightyellow
    keyword whole flag brightyellow
    keyword whole repo brightyellow


